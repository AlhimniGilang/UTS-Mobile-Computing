<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/pandawa1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="146dp"
                android:layout_height="162dp"
                android:layout_weight="1"
                android:text="  Pilih Tipe Barang" />

            <LinearLayout
                android:layout_width="146dp"
                android:layout_height="162dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/thasil"
                    android:layout_alignParentLeft="true"
                    tools:ignore="OnClick" >

                    <RadioButton
                        android:id="@+id/arabica"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Arabica" />

                    <RadioButton
                        android:id="@+id/robusta"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:text="Robusta" />

                    <RadioButton
                        android:id="@+id/blend"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:text="House Blend" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tnamabarang"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="  Nama Barang :"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/namabarang"
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:hint=" "
                android:inputType="text"
                android:padding="10dp"
                android:textSize="30sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/thargasatuan"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="  Harga Satuan :"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/hargasatuan"
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:hint=" "
                android:inputType="number"
                android:padding="10dp"
                android:textSize="30sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tjumlahsatuan"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="  Jumlah Satuan :"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/jumlahsatuan"
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:hint=" "
                android:inputType="number"
                android:padding="10dp"
                android:textSize="30sp"
                android:textStyle="normal" />

        </LinearLayout>

        <Button
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HITUNG" />

        <TextView
            android:id="@+id/thasil"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:text="  Total Harga " />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>